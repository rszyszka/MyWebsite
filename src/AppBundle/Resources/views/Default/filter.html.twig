{% extends 'base.html.twig' %}

{% block body %}

    <form class="form-horizontal" method="post">
        <fieldset>

            <!-- Form Name -->
            <legend>Filtruj użytkowników</legend>

            <!-- Multiple Checkboxes -->
            <div class="form-group">
                <label class="col-md-4 control-label" for="checkboxes">Kwalifikacje</label>
                <div class="col-md-4">

                    {% for qualification in qualifications %}
                        <div class="checkbox">
                            <label class="checkbox-inline" for="checkbox-{{ qualification.id }}">
                                <input name="checkboxes[]" id="checkbox-{{ qualification.id }}" value={{ qualification.id }} type="checkbox">
                                {{ qualification.name }}
                            </label>
                        </div>
                    {% endfor %}
                </div>
            </div>

            <div class="col-md-4">
                <button id="submit" name="submit" class="btn btn-primary">Filtruj</button>
            </div>

        </fieldset>
    </form>


{% endblock %}