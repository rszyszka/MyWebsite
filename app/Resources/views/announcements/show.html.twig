{% extends 'base.html.twig' %}

{% block body %}
    <h1 class="card-header">{{ announcement.title }}</h1>
    <div class="card-body border">
        <p1>{{ announcement.text }}</p1>
        </br></br>
        <p1><b>Wymagania:</b></p1>
        <ul>
            {% for req in announcement.requirements %}
                <li>
                    {{ req.name }}
                </li>
            {% endfor %}
        </ul>

        </br>
        <p1><b>Kontakt:</b></p1>
        <ul>
            <li>
                {{ announcement.user.email }}
            </li>
        </ul>

        {% if(announcement.user == app.user or is_granted("ROLE_ADMIN")) %}
        </br>
        {{ form_start(delete_form) }}
            <a class="btn btn-info" href="{{ path('announcements_edit', { 'id': announcement.id }) }}">Edytuj</a>
            <input class="btn btn-info" type="submit" value="Delete">
        {{ form_end(delete_form) }}
        {% endif %}

    </div>

    </br>
    <a class="btn btn-outline-secondary" href="{{ path('announcements_index') }}">Powr√≥t do listy</a>

{% endblock %}