{% extends 'base.html.twig' %}

{% block body %}
    <h1>Announcements list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Text</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for announcement in announcements %}
            <tr>
                <td><a href="{{ path('announcements_show', { 'id': announcement.id }) }}">{{ announcement.id }}</a></td>
                <td>{{ announcement.title }}</td>
                <td>{{ announcement.text }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('announcements_show', { 'id': announcement.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('announcements_edit', { 'id': announcement.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('announcements_new') }}">Create a new announcement</a>
        </li>
    </ul>
{% endblock %}
