<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('public/node_modules/bootstrap/dist/css/bootstrap.min.css') }}" />
            <link rel="stylesheet" href="{{ asset('public/myStyles.css') }}" />
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />

    </head>

    <body>
    <nav class="navbar navbar-inverse">
    <div class="container-fluid">
        <ul class="nav navbar-nav">
            <li><a href="{{ path('homepage') }}">Home</a></li>
            <li><a href="{{ path('info') }}">Info</a></li>
            {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                <li><a href="{{ path('announcements_index') }}">Announcements</a></li>
                <li><a href="{{ path('qualifications_index') }}">Qualifications</a></li>
                <li><a href="{{ path('user_index') }}">Users</a>
                <li><a href="{{ path('account') }}">My Account</a></li>
                <li>
                    <a href="{{ path('fos_user_security_logout') }}">
                        {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
                    </a>
                </li>
        {% else %}
            <li><a href="{{ path('fos_user_security_login') }}">{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a></li>
            <li><a href="{{ path('fos_user_registration_register') }}">{{ 'layout.register'|trans({}, 'FOSUserBundle') }}</a></li>
        {% endif %}
        </ul>
    </div>
    </nav>
    <div class="page-header container text-center">
        <img src="{{ asset('public/work.jpg') }}">
    </div>
    <div class="container">


        {% block body %}{% endblock %}
        {% block javascripts %}
            <script src="{{ asset('public/node_modules/jquery/dist/jquery.min.js') }}"></script>
            <script src="{{ asset('public/node_modules/bootstrap/dist/js/bootstrap.bundle.min.js') }}"></script>
        {% endblock %}
    </div>
    </body>
</html>
